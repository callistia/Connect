package com.callisto.connect.exception;

import java.util.HashMap;

public class ExceptionHelper {

	// Exception codes.
	public static final int ERROR_INVALID_PARAMETER = 1;
	
	private static HashMap<Integer, String> _dictionary = null;
	
	static {
		
		ExceptionHelper._dictionary = new HashMap<Integer, String>();
		
		// Initializations: From file or Hard coded.
	}
	
	public static String getErrorMessageByCode(int errorCode)
	{
		if (ExceptionHelper._dictionary.containsKey(errorCode) != true)
		{
			return null;
		}
		
		return ExceptionHelper._dictionary.get(errorCode);
	}

}
